<div class="container mx-auto p-6 max-w-4xl">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-2xl font-bold">学びの記録</h1>
    <% if user_signed_in? %>
      <%= link_to "新規投稿", new_post_path, class: "bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-lg shadow-sm transition duration-150 ease-in-out" %>
    <% end %>
  </div>

  <div class="space-y-4">
    <% @posts.each do |post| %>
      <div class="bg-white rounded-lg shadow-md hover:shadow-lg transition duration-150 ease-in-out w-full">
        <div class="p-6">
          <div class="flex items-center mb-3">
            <div class="text-gray-500">
              <%= post.user.username %>
              <span class="mx-2"></span>
              <%= post.learning_date.strftime('%Y年%m月%d日') %>
            </div>
          </div>

          <h3 class="text-xl font-semibold mb-2">
            <%= link_to post.title, post_path(post), class: "text-blue-600 hover:text-blue-800" %>
          </h3>
          
          <p class="text-gray-700">
            <%= truncate(post.body, length: 300) %>
          </p>
        </div>
      </div>
    <% end %>
  </div>
</div>
