<div class="max-w-6xl mx-auto px-2 my-16">
  <div class="border rounded-lg bg-gray-50 p-4 sm:p-16 text-sm sm:text-base shadow-md">
    <h1 class="text-2xl font-bold mb-12 text-center">お問い合わせ内容確認</h1>

    <table class="w-full mb-8">
      <tbody>
        <tr class="border-b">
          <td class="py-3 pr-4 text-right font-medium w-1/3">お名前</td>
          <td class="py-3"><%= @contact.name %></td>
        </tr>
        <tr class="border-b">
          <td class="py-3 pr-4 text-right font-medium">メールアドレス</td>
          <td class="py-3"><%= @contact.email %></td>
        </tr>
        <tr class="border-b">
          <td class="py-3 pr-4 text-right font-medium">件名</td>
          <td class="py-3"><%= @contact.subject %></td>
        </tr>
        <tr>
          <td class="py-3 pr-4 text-right font-medium">メッセージ</td>
          <td class="py-3 whitespace-pre-wrap"><%= @contact.message %></td>
        </tr>
      </tbody>
    </table>

    <div class="flex justify-center space-x-4">
      <%= form_with model: @contact do |f| %>
        <%= f.hidden_field :name %>
        <%= f.hidden_field :email %>
        <%= f.hidden_field :subject %>
        <%= f.hidden_field :message %>
        <%= f.submit '送信', class: "bg-green-500 hover:bg-green-600 text-white py-2 px-6 rounded-md" %>
      <% end %>

      <%= form_with model: @contact, url: back_contacts_path do |f| %>
        <%= f.hidden_field :name %>
        <%= f.hidden_field :email %>
        <%= f.hidden_field :subject %>
        <%= f.hidden_field :message %>
        <%= f.submit '入力画面に戻る', class: "bg-gray-500 hover:bg-gray-600 text-white py-2 px-6 rounded-md" %>
      <% end %>
    </div>
  </div>
</div>