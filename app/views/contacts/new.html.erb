<div class="max-w-6xl mx-auto px-2 my-16">
  <div class="border rounded-lg bg-gray-50 p-4 sm:p-16 text-sm sm:text-base shadow-md">
    <h1 class="text-2xl font-bold mb-12 text-center">お問い合わせ</h1>
    
    <% if flash.now[:alert] %>
    <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4">
      <%= flash.now[:alert] %>
    </div>
  <% end %>

    <%= form_with model: @contact, url: confirm_contacts_path, local: true, data: { turbo: false } do |f| %>
      <div class="mb-4">
        <%= f.label :name, 'お名前', class: "block text-gray-700 font-medium mb-2" %>
        <span class="text-red-500">*</span>
        <%= f.text_field :name, autofocus: true, class: "w-full p-2 border rounded-md" %>
      </div>

      <div class="mb-4">
        <%= f.label :email, 'メールアドレス', class: "block text-gray-700 font-medium mb-2" %>
        <span class="text-red-500">*</span>
        <%= f.email_field :email, class: "w-full p-2 border rounded-md" %>
      </div>

      <div class="mb-4">
        <%= f.label :subject, '件名', class: "block text-gray-700 font-medium mb-2" %>
        <span class="text-red-500">*</span>
        <%= f.text_field :subject, class: "w-full p-2 border rounded-md" %>
      </div>

      <div class="mb-6">
        <%= f.label :message, 'メッセージ', class: "block text-gray-700 font-medium mb-2" %>
        <span class="text-red-500">*</span>
        <%= f.text_area :message, rows: 10, class: "w-full p-2 border rounded-md" %>
      </div>

      <div class="text-center">
        <%= f.submit '入力内容確認', class: "bg-blue-500 hover:bg-blue-600 text-white py-2 px-6 rounded-md" %>
      </div>
    <% end %>
  </div>
</div>